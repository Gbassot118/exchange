<li id="doc-item-{{ document.id }}">
    <a href="/session/{{ session.id }}/document/{{ document.slug }}"
       hx-get="/session/{{ session.id }}/document/{{ document.slug }}"
       hx-target="#document-content"
       hx-swap="innerHTML"
       hx-push-url="true"
       class="flex items-center px-2 py-1.5 rounded text-sm hover:bg-gray-100 group
              {% if currentDocument is defined and currentDocument and currentDocument.id == document.id %}bg-blue-50 text-blue-700{% else %}text-gray-700{% endif %}"
       style="padding-left: {{ (level * 12) + 8 }}px">

        <!-- IcÃ´ne type -->
        <span class="mr-2 flex-shrink-0">
            {% if document.type == 'synthesis' %}
                <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
            {% elseif document.type == 'question' %}
                <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            {% elseif document.type == 'comparison' %}
                <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
            {% else %}
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
            {% endif %}
        </span>

        <span class="truncate flex-1">{{ document.title }}</span>

        {% if document.annotations|length > 0 %}
            <span class="ml-1 px-1.5 py-0.5 text-xs rounded-full bg-amber-100 text-amber-700">
                {{ document.annotations|length }}
            </span>
        {% endif %}
    </a>

    {% if document.children|length > 0 %}
        <ul class="space-y-0.5">
            {% for child in document.children %}
                {% include 'session/_document_item.html.twig' with {document: child, level: level + 1} %}
            {% endfor %}
        </ul>
    {% endif %}
</li>
