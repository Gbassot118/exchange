<div class="p-4 border-b border-gray-200">
    <h2 class="font-semibold text-gray-900 truncate" title="{{ session.title }}">{{ session.title }}</h2>
    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
        {% if session.status == 'preparation' %}bg-yellow-100 text-yellow-800
        {% elseif session.status == 'en_cours' %}bg-green-100 text-green-800
        {% elseif session.status == 'termine' %}bg-blue-100 text-blue-800
        {% else %}bg-gray-100 text-gray-800{% endif %}">
        {{ session.status|replace({'_': ' '})|capitalize }}
    </span>
</div>

<nav class="flex-1 overflow-y-auto p-2">
    <div class="mb-2 flex items-center justify-between px-2">
        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Documents</span>
        <button hx-get="/session/{{ session.id }}/document/new"
                hx-target="#document-content"
                hx-swap="innerHTML"
                class="p-1 text-gray-400 hover:text-blue-600 rounded hover:bg-gray-100"
                title="Nouveau document">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
        </button>
    </div>

    <ul class="space-y-1" id="document-tree" sse-swap="document.created:beforeend">
        {% for doc in documents %}
            {% include 'session/_document_item.html.twig' with {document: doc, level: 0} %}
        {% else %}
            <li class="px-2 py-4 text-center text-gray-400 text-sm" id="empty-docs-message">
                Aucun document
            </li>
        {% endfor %}
    </ul>
</nav>

<div class="p-3 border-t border-gray-200 bg-gray-50 space-y-3">
    <div>
        <div class="text-xs text-gray-500 mb-2">Exporter :</div>
        <div class="flex gap-2">
            <a href="/session/{{ session.id }}/export/markdown"
               class="flex-1 flex items-center justify-center gap-1 px-2 py-1.5 text-xs font-medium text-gray-700 bg-white rounded border border-gray-300 hover:bg-gray-50 transition-colors"
               title="Exporter en Markdown">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                .md
            </a>
            <a href="/session/{{ session.id }}/export/html"
               class="flex-1 flex items-center justify-center gap-1 px-2 py-1.5 text-xs font-medium text-gray-700 bg-white rounded border border-gray-300 hover:bg-gray-50 transition-colors"
               title="Exporter en HTML">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                .html
            </a>
        </div>
    </div>
    <div>
        <div class="text-xs text-gray-500 mb-2">Code d'invitation :</div>
        <div class="flex items-center gap-2">
            <code class="flex-1 bg-white px-2 py-1 rounded border text-xs font-mono truncate">{{ session.inviteCode }}</code>
            <button onclick="navigator.clipboard.writeText('{{ session.inviteCode }}')"
                    class="p-1 text-gray-400 hover:text-blue-600 rounded hover:bg-white"
                    title="Copier le code">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
            </button>
        </div>
    </div>
    <div>
        <button onclick="copyInviteLink()"
                id="copy-link-btn"
                class="w-full flex items-center justify-center gap-2 px-3 py-2 text-sm font-medium text-blue-700 bg-blue-50 rounded-md hover:bg-blue-100 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
            </svg>
            <span id="copy-link-text">Copier le lien d'invitation</span>
        </button>
    </div>
</div>
<script>
    function copyInviteLink() {
        const inviteUrl = window.location.origin + '/?code={{ session.inviteCode }}';
        navigator.clipboard.writeText(inviteUrl).then(() => {
            const btn = document.getElementById('copy-link-btn');
            const text = document.getElementById('copy-link-text');
            const originalText = text.textContent;
            text.textContent = 'Lien copie !';
            btn.classList.remove('text-blue-700', 'bg-blue-50', 'hover:bg-blue-100');
            btn.classList.add('text-green-700', 'bg-green-50');
            setTimeout(() => {
                text.textContent = originalText;
                btn.classList.remove('text-green-700', 'bg-green-50');
                btn.classList.add('text-blue-700', 'bg-blue-50', 'hover:bg-blue-100');
            }, 2000);
        });
    }
</script>
