<div class="max-w-2xl mx-auto text-center py-12" id="welcome-screen">
    <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
    </svg>

    <h2 class="mt-4 text-xl font-medium text-gray-900">Bienvenue dans {{ session.title }}</h2>
    <p class="mt-2 text-gray-500">
        Sélectionnez un document dans la barre latérale ou créez-en un nouveau pour commencer.
    </p>

    <div class="mt-8">
        <button hx-get="/session/{{ session.id }}/document/new"
                hx-target="#document-content"
                hx-swap="innerHTML"
                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Créer un document
        </button>
    </div>

    <div class="mt-12 grid grid-cols-3 gap-6 text-left">
        <div class="bg-blue-50 rounded-lg p-4">
            <div class="text-blue-600 font-medium mb-1">Synthèse</div>
            <p class="text-sm text-gray-600">Vue d'ensemble et récapitulatif</p>
        </div>
        <div class="bg-amber-50 rounded-lg p-4">
            <div class="text-amber-600 font-medium mb-1">Question</div>
            <p class="text-sm text-gray-600">Point à décider avec options</p>
        </div>
        <div class="bg-purple-50 rounded-lg p-4">
            <div class="text-purple-600 font-medium mb-1">Comparaison</div>
            <p class="text-sm text-gray-600">Tableau pour/contre</p>
        </div>
    </div>
</div>

<script>
    // Utiliser requestAnimationFrame pour s'assurer que le DOM est complètement rendu
    requestAnimationFrame(function() {
        const sessionId = '{{ session.id }}';

        // Détecter si c'est une navigation HTMX ou un chargement complet de page
        // Sur un chargement complet, le formulaire n'a pas de document_id défini
        // Note: on cherche spécifiquement le formulaire de création (pas les formulaires de réponse)
        const annotationForm = document.querySelector('#annotations-container form[hx-post$="/annotation/create"]');
        const hiddenInput = annotationForm ? annotationForm.querySelector('input[name="document_id"]') : null;
        const isHtmxNavigation = hiddenInput && hiddenInput.value !== '';

        // Effacer l'ID du document courant
        delete document.body.dataset.currentDocumentId;

        // Ne mettre à jour que si c'est une navigation HTMX (pas un chargement initial)
        if (isHtmxNavigation) {
            // 1. Retirer la surbrillance de tous les documents dans la sidebar
            document.querySelectorAll('#document-tree a').forEach(function(link) {
                link.classList.remove('bg-blue-50', 'text-blue-700');
                link.classList.add('text-gray-700');
            });

            // 2. Vider le panneau d'annotations et afficher le message "Aucune annotation"
            const annotationsList = document.getElementById('annotations-list');
            if (annotationsList) {
                annotationsList.innerHTML = '<div class="p-4 text-center text-gray-400 text-sm" id="no-annotations-message">Aucune annotation</div>';
            }

            // 3. Masquer le formulaire d'annotation (car aucun document sélectionné)
            if (annotationForm) {
                const formContainer = annotationForm.parentElement;
                if (formContainer) {
                    formContainer.style.display = 'none';
                }
                // Vider le document_id
                if (hiddenInput) {
                    hiddenInput.value = '';
                }
            }

            // 4. Mettre à jour le header (sans document)
            htmx.ajax('GET', '/session/' + sessionId + '/header', {
                target: '#session-header',
                swap: 'innerHTML'
            });
        }
    });
</script>
